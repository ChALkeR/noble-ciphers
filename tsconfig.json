{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "outDir": ".",
        "target": "es2020",
        "lib": ["es2020", "dom"], // Set explicitly to remove DOM
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": false,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "@noble/ciphers/webcrypto/crypto": [ "src/webcrypto/crypto" ]
        },
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "*.d.ts"
    ],
}
